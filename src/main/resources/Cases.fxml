<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="693.0" prefWidth="943.0" styleClass="SideBarColor" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.CasesController">

   <!-- List of cases styled like a card -->
   <ListView fx:id="listView" layoutX="221.0" layoutY="19.0" prefHeight="654.0" prefWidth="707.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" />

   <!-- Logo -->
   <ImageView fitHeight="106.0" fitWidth="200.0" layoutY="-1.0">
      <image>
         <Image url="@images/LegalLink-NoBg.png" />
      </image>
   </ImageView>

   <!-- Discover Button -->
   <Button layoutX="39.0" layoutY="257.0" mnemonicParsing="false" onAction="#handleDiscover" prefHeight="44.0" prefWidth="142.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" stylesheets="@style.css" text="Discover">
      <styleClass>
         <String fx:value="SideBarColor" />
         <String fx:value="Navbar-back-button" />
      </styleClass>
      <font>
         <Font name="Consolas" size="19.0" />
      </font>
   </Button>

   <!-- Post a Case Button -->
   <Button layoutX="39.0" layoutY="139.0" mnemonicParsing="false" onAction="#handlePostCase" prefHeight="44.0" prefWidth="142.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" stylesheets="@style.css" text="+ Post a Case">
      <styleClass>
         <String fx:value="SideBarColor" />
         <String fx:value="Navbar-back-button" />
      </styleClass>
      <font>
         <Font name="Consolas" size="17.0" />
      </font>
   </Button>

   <!-- Cases Button -->
   <Button layoutX="39.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleCases" prefHeight="44.0" prefWidth="142.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" stylesheets="@style.css" text="Cases">
      <styleClass>
         <String fx:value="SideBarColor" />
         <String fx:value="Navbar-back-button" />
      </styleClass>
      <font>
         <Font name="Consolas" size="19.0" />
      </font>
   </Button>

   <!-- Separator Lines -->
   <Line endX="21.0" endY="7.62939453125E-6" layoutX="200.0" layoutY="105.0" startX="-200.0" startY="0.0" />

   <!-- idk Button -->
   <Button layoutX="39.0" layoutY="421.0" mnemonicParsing="false" onAction="#handleAppointment" prefHeight="44.0" prefWidth="142.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" stylesheets="@style.css" text="Appointment">
      <styleClass>
         <String fx:value="SideBarColor" />
         <String fx:value="Navbar-back-button" />
      </styleClass>
      <font>
         <Font name="Consolas" size="19.0" />
      </font>
   </Button>

   <!-- Settings Button -->
   <Button layoutX="39.0" layoutY="542.0" mnemonicParsing="false" onAction="#handleSettings" prefHeight="44.0" prefWidth="142.0" style="-fx-background-radius: 13; -fx-border-radius: 13;" stylesheets="@style.css" text="Settings">
      <styleClass>
         <String fx:value="SideBarColor" />
         <String fx:value="Navbar-back-button" />
      </styleClass>
      <font>
         <Font name="Consolas" size="14.0" />
      </font>
   </Button>

</AnchorPane>
