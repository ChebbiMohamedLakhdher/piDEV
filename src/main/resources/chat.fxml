<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="688" prefWidth="933" styleClass="White" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ChatController">
    <center>
        <SplitPane dividerPositions="0.3">
            <items>
                <!-- Left side: Chat List -->
                <VBox spacing="10" styleClass="SideBarColor" stylesheets="@style.css">
                    <Label prefHeight="58.0" prefWidth="156.0" style="-fx-background-radius: 15; -fx-background-radius: 15;" styleClass="ButtoncolorBackground" stylesheets="@style.css" text=" Conversations">
                  <font>
                     <Font name="Consolas Bold" size="19.0" />
                  </font>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin></Label>
                    <ListView fx:id="chatList" styleClass="SideBarColor" stylesheets="@style.css" />
                </VBox>

                <!-- Right side: Chat Area -->
                <VBox spacing="10" stylesheets="@style.css">
                    <Label fx:id="chatPartnerLabel" prefHeight="69.0" prefWidth="650.0" styleClass="ButtoncolorBackground" />
                    <ScrollPane fx:id="messageScroll" fitToWidth="true" prefHeight="562.0" prefWidth="636.0" style="-fx-background-radius: 15; -fx-border-radius: 15;" styleClass="White" stylesheets="@style.css" vvalue="1.0">
                        <VBox fx:id="messageContainer" spacing="8" styleClass="message-container">
                            <padding>
                                <Insets bottom="10" left="15" right="15" top="10"/>
                            </padding>
                        </VBox>
                    </ScrollPane>
                    <HBox spacing="10">
                        <TextField fx:id="messageInput" promptText="Type your message..." HBox.hgrow="ALWAYS" />
                        <Button onAction="#handleSendMessage" styleClass="send-button" stylesheets="@style.css" text="Send" />
                    </HBox>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
