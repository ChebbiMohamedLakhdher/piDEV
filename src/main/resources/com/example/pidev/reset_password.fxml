<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Password Reset" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Button fx:id="requestTokenButton" text="Request Reset Token" onAction="#handleRequestToken"
                GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

        <Label text="Reset Token:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tokenField" promptText="Enter reset token" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="New Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField" promptText="Enter new password" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Button fx:id="resetPasswordButton" text="Reset Password" onAction="#handleResetPassword"
                GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
    </GridPane>

    <Label fx:id="messageLabel" style="-fx-font-weight: bold;" maxWidth="300" wrapText="true"/>
</VBox>